<%= form_with(model: shared_post) do |form| %>
  <% if shared_post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> Post not shared. Please try again.</h2>

      <ul>
        <% shared_post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label "URL"%>
    <%= form.text_field :url%>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
